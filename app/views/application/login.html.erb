<div class="page-header">
  <h1>Login</h1>
  <%= link_to "New user? Click here!", new_user_path %>
</div>

<%= form_tag("authenticate", :method => "post", :html => { :class => "form-horizontal" }) do %>
  <% if @failed %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4> Incorrect credentials </h4>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :name, "Name: ", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :name, @name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Password: ", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :password, @pass, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Login", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>