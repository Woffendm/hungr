<div class="page-header">
  <%= link_to opinions_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_opinion_path(@opinion), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show opinion</h1>
</div>

<dl class="dl-horizontal">
  <dt>User:</dt>
  <dd><%= @opinion.user_id %></dd>

  <dt>Restaurant:</dt>
  <dd><%= @opinion.restaurant_id %></dd>

  <dt>Like:</dt>
  <dd><%= @opinion.like %></dd>

</dl>
